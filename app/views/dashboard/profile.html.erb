<div class="container">
  <h1 style="text-align: center">Profile</h1>
  <%= simple_form_for(current_user, url: registration_path(current_user),
                      html: { method: :put }) do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="row mt-5">
          <div class="col-6">
            <%= image_tag(current_user.avatar, class: "avatar-image") if current_user.avatar.attached? %>
          </div>
          <div class="col-6 mt-5">
            <%= f.input :avatar, required: false, label: false %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-6 no-padding-col">
            <%= f.input :full_name, placeholder: "Full Name...", label: false, class: "form-control", required: false %>
          </div>
          <div class="col-6 no-padding-col">
            <div class="input-group mb-3" style="padding-left: 10px !important">
              <span class="input-group-text">@</span>
              <%= f.input :username, placeholder: "Username...", label: false, required: true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col no-padding-col">
            <div class="input-group row">
              <%= f.input :body, placeholder: "About you...", label: false, class: "form-control", required: false %>
            </div>
          </div>
        </div>
        <div class="col-4">
          <%= f.submit "Update Account", class: "btn btn-primary mt-3", style: "width: 100%" %>
        </div>
      </div>
      <div class="col-6">
        <div class="row profile-links" data-controller="clipboard" data-clipboard-success-content="Link Copied!">
            <%= hidden_field_tag(:share_link, user_url(current_user.friendly_id), data: { "clipboard-target": "source" }, readonly: true ) %>
<!--            <button onclick="alert('Link copied to clipboard!')" type="button" class="btn btn-outline-success" data-action="clipboard#copy" style="margin-bottom: 40px">-->
            <button type="button" class="btn btn-outline-success close" data-action="clipboard#copy" style="margin-bottom: 40px">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-share me-1" viewBox="0 0 16 16">
                <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z"/>
              </svg>
              <span data-clipboard-target="button">
                Share your Linktree
              </span>
            </button>
          <%= link_to "See your Linktree", current_user, class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
